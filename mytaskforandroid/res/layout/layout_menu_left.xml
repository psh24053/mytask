<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/menu_left_today"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/FF_click_layout"
        >
        
        <LinearLayout 
            android:id="@+id/menu_left_hot_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_calendar" />

        </LinearLayout>
        
        <TextView
            style="@style/FF_menu_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/menu_left_hot_image"
            android:text="今日待办（1）" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            ></LinearLayout>
        
        
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:id="@+id/menu_left_wait"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/FF_click_layout"
        >
        
        <LinearLayout 
            android:id="@+id/menu_left_all_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            >
            <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/icon_image_list"
	            />
        </LinearLayout>
        
        <TextView
            style="@style/FF_menu_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/menu_left_all_image"
            android:text="等待处理（11）" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            ></LinearLayout>
        
        
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:id="@+id/menu_left_complete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/FF_click_layout"
        >
        
        <LinearLayout 
            android:id="@+id/menu_left_gps_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            >
            <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/icon_movies"
	            />
        </LinearLayout>
        
        <TextView
            style="@style/FF_menu_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/menu_left_gps_image"
            android:text="告一段落（2）" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            ></LinearLayout>
        
        
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:id="@+id/menu_left_history"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/FF_click_layout"
        >
        
        <LinearLayout 
            android:id="@+id/menu_left_top_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            >
            <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/icon_map"
	            />
        </LinearLayout>
        
        <TextView
            style="@style/FF_menu_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/menu_left_top_image"
            android:text="成为历史（1）" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            ></LinearLayout>
        
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/menu_left_about"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/FF_click_layout"
        >
        
        <LinearLayout 
            android:id="@+id/menu_left_about_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            >
            <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/icon_help"
	            />
        </LinearLayout>
        
        <TextView
            style="@style/FF_menu_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/menu_left_about_image"
            android:text="关于My Task" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            ></LinearLayout>
        
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/menu_left_settings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/FF_click_layout"
        >
        
        <LinearLayout 
            android:id="@+id/menu_left_settings_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            >
            <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/icon_settings"
	            />
        </LinearLayout>
        
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FF_menu_left_text"
            android:text="设置"
            android:layout_toRightOf="@id/menu_left_settings_image"
            android:layout_centerVertical="true"
            />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            ></LinearLayout>
        
        
    </RelativeLayout>
    
    
    
</LinearLayout>